---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import RepoCard from "../../components/RepoCard.astro";

interface SkillRepo {
  owner: string;
  name: string;
  desc: string;
}

interface SkillData {
  title: string;
  desc: string;
  url: string;
